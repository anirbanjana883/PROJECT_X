{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    
    // âœ… Keep this pointing ONLY to node_modules
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*", 
    "src/types/express.d.ts" 
  ],
  "exclude": ["node_modules"]
}